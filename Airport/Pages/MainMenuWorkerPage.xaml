<Page x:Class="Airport.Pages.MainMenuWorkerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airport.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="MainMenuWorkerPage">

        <Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition/>
        <ColumnDefinition/>
        <ColumnDefinition/>
        <ColumnDefinition/>
        <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
    </Grid.RowDefinitions>
    <TextBlock Text="Главное меню"
        Grid.Column="2"
        Grid.ColumnSpan="2"
        Grid.Row="0"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        FontSize="30"/>
    <TextBlock Text="Пользователь:"
        Grid.Column="1"
        Grid.ColumnSpan="2"
        Grid.Row="2"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        FontSize="25"/>
    <TextBlock
        Grid.Column="3"
        Grid.ColumnSpan="2"
        x:Name="UserTB"
        Grid.Row="2"
        FontSize="25"
        Width="250"
        Height="30"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"/>
    <TextBlock Text="Логин:"
        Grid.Column="1"
        Grid.ColumnSpan="2"
        Grid.Row="3"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        FontSize="25"/>
    <TextBlock
        Grid.Column="3"
        Grid.ColumnSpan="2"
        x:Name="EmailTB"
        Grid.Row="3"
        FontSize="25"
        Width="250"
        Height="30"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"/>
    <Button Content="Сотрудники"
        x:Name="WorkersBTN"
        Grid.Column="0"
        Grid.ColumnSpan="2"
        Grid.Row="6"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontSize="22"
        Width="250"
        Height="30" Click="WorkersBTN_Click"/>
    <Button Content="Клиенты"
        x:Name="ClientsBTN"
        Grid.Column="2"
        Grid.ColumnSpan="2"
        Grid.Row="6"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontSize="22"
        Width="250"
        Height="30"
        Click="ClientsBTN_Click"/>
    <Button Content="Рейсы"
        x:Name="FlightsBTN"
        Grid.Column="4"
        Grid.ColumnSpan="2"
        Grid.Row="6"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontSize="22"
        Width="250"
        Height="30" Click="FlightsBTN_Click"/>
    <Button Content="Самолеты"
        x:Name="AirplaneBTN"
        Grid.Column="0"
        Grid.ColumnSpan="2"
        Grid.Row="7"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontSize="22"
        Width="250"
        Height="30"
        Click="AirplaneBTN_Click"/>
    <Button Content="Авиакомпании"
        x:Name="AircompanyBTN"
        Grid.Column="2"
        Grid.ColumnSpan="2"
        Grid.Row="7"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontSize="22"
        Width="250"
        Height="30"
        Click="AircompanyBTN_Click"/>
    <Button Content="Страны"
        x:Name="CountryBTN"
        Grid.Column="4"
        Grid.ColumnSpan="2"
        Grid.Row="7"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontSize="22"
        Width="250"
        Height="30"
        Click="CountryBTN_Click"/>
    <Button Content="Назад"
        x:Name="BackBTN"
        Grid.Column="2"
        Grid.ColumnSpan="2"
        Grid.Row="8"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontSize="22"
        Width="250"
        Height="30"
        Click="BackBTN_Click"/>
</Grid>
</Page>
